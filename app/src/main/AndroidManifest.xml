<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andresaftari.foodapi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".utils.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.activities.AboutActivity" />
        <activity android:name=".views.activities.DetailActivity" />
        <activity
            android:name=".views.activities.CategoryActivity"
            android:label="Category"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".views.activities.MainActivity" />
    </application>

</manifest>